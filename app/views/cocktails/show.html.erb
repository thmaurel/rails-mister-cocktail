<div class="container">
  <div class="card-category-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @cocktail.photo %>)">
    <div class='text-center'><h1><%= @cocktail.name %></p>
    <% @cocktail.doses.each do |dose| %>
      <p><%= dose.ingredient.name %> : <strong><%= dose.description %></strong>
      <%= link_to "🗑️", dose_destroy_path(@cocktail, dose), method: :delete %></p>
    <% end %>
    </div>
  </div>

  <div class="container">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit %>
    <% end %>

    <%= link_to "Back to list", cocktails_path, class: 'btn btn-' %>
  </div>
</div>
